{
  "name": "summer-camp-applications",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "vue-cli-service build",
    "build:dev": "vue-cli-service build --mode development",
    "build:watch": "vue-cli-service build --mode development --watch --no-clean",
    "deploy": "firebase deploy",
    "emulators": "firebase emulators:start --import demodata",
    "emulators:export": "firebase emulators:start --import demodata --export-on-exit",
    "lint": "vue-cli-service lint",
    "serve": "run-s build:dev watch",
    "serve:firebase": "firebase serve",
    "serve:vue": "vue-cli-service serve --port 3000",
    "start": "npm run serve",
    "watch": "run-p -l emulators build:watch serve:vue"
  },
  "dependencies": {
    "@lttr/skaut-design": "^0.1.4",
    "core-js": "^3.6.5",
    "date-fns": "^2.16.1",
    "firebase": "^8.2.1",
    "firebaseui": "^4.7.1",
    "vue": "^2.6.12",
    "vue-router": "^3.4.7",
    "zipcelx": "^1.6.2"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^5.0.8",
    "@vue/cli-plugin-eslint": "^5.0.8",
    "@vue/cli-service": "^5.0.8",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-vue": "^7.1.0",
    "firebase-tools": "^9.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "vue-template-compiler": "^2.6.12"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "plugin:vue/essential",
      "plugin:prettier/recommended",
      "eslint:recommended"
    ],
    "env": {
      "es6": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 2019,
      "sourceType": "module",
      "parser": "babel-eslint"
    },
    "rules": {
      "prettier/prettier": "error",
      "no-unused-vars": "warn"
    },
    "plugins": [
      "prettier"
    ]
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 2%",
    "last 2 versions",
    "not IE 11"
  ]
}
